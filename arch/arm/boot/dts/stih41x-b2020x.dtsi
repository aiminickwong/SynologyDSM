/ {
	memory{
		device_type = "memory";
		reg = <0x40000000 0x80000000>;
	};

	chosen {
		bootargs = "console=ttyAS0,115200";
		linux,stdout-path = &sbc_serial1;
	};

	aliases {
		usb0 = &usb0;
		usb1 = &usb1;
		usb2 = &usb2;
	};

	soc {
		sbc_serial1: serial@fe531000 {
			status = "okay";
		};

		leds {
			compatible = "gpio-leds";
			red {
				#gpio-cells = <1>;
				label = "Front Panel LED";
				gpios = <&PIO4 1>;
				linux,default-trigger = "heartbeat";
			};
			green {
				gpios = <&PIO4 7>;
				default-state = "off";
			};
		};

		ethernet1: dwmac@fef08000 {
			status = "okay";
			phy-mode = "rgmii-id";
			snps,reset-active-low;
			snps,reset-delays-us = <0 10000 10000>;
			pinctrl-0 = <&pinctrl_rgmii1>;
		};

		usb0: usb@fe100000 {
			status = "okay";
		};

		usb1: usb@fe200000 {
			status = "okay";
		};

		usb2: usb@fe300000 {
			status = "okay";
		};

		i2c@fed40000 {
			status = "okay";
		};

		/* HDMI Tx I2C */
		i2c@fed41000 {
			/* HDMI V1.3a supports Standard mode only */
			clock-frequency = <100000>;
			st,i2c-min-scl-pulse-width-us = <0>;
			st,i2c-min-sda-pulse-width-us = <1>;

			status = "okay";
		};

		i2c@fe541000 {
			status = "okay";
		};

		mmc0: sdhci@fe81e000 {
			status = "okay";
		};

		/* audio dac buffer */
		i2c@fed40000 {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;

			snd_dac_buffer@4a {
				compatible = "st,snd_dac_buf_st6440";
				reg = <0x4a>;
				st,source-bus-id = <&snd_uni_player2>;
				st,buffer-gain = <5>;
			};
		};

		/* FSM */
		spifsm:	spifsm@fe902000 {
			status = "okay";
			partitions = <&b2020x_fsm_partitions>;

			b2020x_fsm_partitions: partitions-b2020x {
				#address-cells = <1>;
				#size-cells = <1>;
				partition@0 {
					label = "boot";
					reg = <0x00000000 0x00500000>;
				};
				partition@500000 {
					label = "rest";
					reg = <0x00500000 0x00b00000>;
				};
			};
		};

		nandbch: nand-bch {
			status = "okay";
			st,nand-banks = <&nand_banks>;
		};

		nand_banks: nand-banks {
			/*
			 * Micron MT29F8G08ABABAWP:
			 *  - Size = 8Gib(1GiB); Page = 4096+224; Block = 512KiB
			 *  - ECC = 4-bit/540B min
			 *  - ONFI 2.1 (timing parameters retrieved during probe)
			 */
			bank0 {
				nand-on-flash-bbt;
				nand-no-autoincr;
				st,nand-csn = <0>;
				st,nand-timing-relax = <0>;
				partitions {
					#address-cells = <1>;
			                #size-cells = <1>;
					partition@0 {
						label = "NAND Flash 1";
						reg = <0x00000000 0x00800000>;
					};
					partition@800000 {
						label = "NAND Flash 2";
						reg = <0x00800000 0x3f800000>;
					};
				};
			};
		};

		/* Uniperipheral */
		snd_uni_player0: snd-uni-player@0xfe002000 {
			status = "okay";
		};

		snd_uni_player1: snd-uni-player@0xfe003000 {
			status = "okay";
		};

		snd_uni_player2: snd-uni-player@0xfe004000 {
			status = "okay";
		};

		snd_uni_player3: snd-uni-player@0xfe006000 {
			status = "okay";
		};

		snd_uni_reader0: snd-uni-reader@0xfe005000 {
			status = "disabled";
		};

		snd_uni_reader1: snd-uni-reader@0xfe007000 {
			status = "disabled";
		};

		snd_conv_dac_sc: snd-conv-dac-sc {
			status = "okay";
		};

		snd_conv_biphase: snd-conv-biphase {
			status = "okay";
		};
	};
};
